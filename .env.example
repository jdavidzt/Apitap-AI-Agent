# Voice Customer Service Agent Configuration
# Copy this file to .env and fill in your values

# ===================================
# Database Configuration
# ===================================
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=ecommerce
MYSQL_USER=root
MYSQL_PASSWORD=your_secure_mysql_password

# ===================================
# OpenAI Configuration (for GPT-4o mini)
# ===================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===================================
# Eleven Labs Configuration (for TTS)
# ===================================
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Voice ID for Eleven Labs
# Browse voices at: https://elevenlabs.io/voice-library
# Popular Spanish voices: "Antoni", "Diego", "Valentino" for male, "Domi", "Bella" for female
ELEVENLABS_VOICE_ID=Antoni

# ===================================
# Application Settings
# ===================================
# API Server Port (default: 8000)
API_PORT=8000

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
